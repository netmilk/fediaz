<%= form_for([@artefact, @attachment], :html => { :class => "form-horizontal" }) do |f| %>
  <% if @attachment.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@attachment.errors.count, "error") %> prohibited this attachment from being saved:</h4>

      <ul>
      <% @attachment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :artefact_id, :value => @artefact.id %>

  <div class="form-group">
    <%= f.label :name, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :asset, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.file_field :asset %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :weight, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :weight, :value => '0', :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
