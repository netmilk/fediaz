<div class="page-header">
 
  <%= link_to artefact_attachments_path(@artefact.id), :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back to index
  <% end %>

  <%= link_to [@artefact, @attachment], :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show attachment for <%= @artefact.name%></h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @attachment.name %></dd>

  <dt>Asset:</dt>
  <dd><%= @attachment.asset %></dd>

  <dt>Weight:</dt>
  <dd><%= @attachment.weight %></dd>

</dl>
