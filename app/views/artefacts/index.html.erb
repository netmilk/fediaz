<div class="page-header">
  <%= link_to new_artefact_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Artefact
  <% end %>
  <h1>Listing artefacts</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Technique</th>
            <th>Team</th>
            <th>Description</th>
            <th>Published</th>
            <th>Attachments</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @artefacts) do |artefact| %>
            <td><%= artefact.name %></td>
            <td><%= artefact.location %></td>
            <td><%= artefact.technique %></td>
            <td><%= artefact.team %></td>
            <td><%= artefact.description %></td>
            <td><%= artefact.published %></td>
            <td><%= link_to artefact.attachments.length, artefact_attachments_path(artefact.id)%></td>
            <td><%= link_to 'Show', artefact %></td>
        <td><%= link_to 'Edit', edit_artefact_path(artefact) %></td>
        <td><%= link_to 'Destroy', artefact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
