<%= form_for(@artefact, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @artefact.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@artefact.errors.count, "error") %> prohibited this artefact from being saved:</h4>

      <ul>
      <% @artefact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :location, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :location, :class => "form-control" %>
    </div>
  </div>

  <%= f.fields_for :attachments do |a|%>
    <div class="form-group">
      <%= a.label :asset, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <% unless a.object.asset.blank? %>
          <%= image_tag a.object.asset.url :thumb %>
          <%= a.file_field :asset, :title => "Change file" %>
          <%= link_to new_artefact_path, :class => 'btn btn-primary' do %>
            <span class="glyphicon glyphicon-remove"></span>
            Delete image
          <% end %>

        <% else %>
          <%= a.file_field :asset, :title => "Add file" %>
        <% end %>

      </div>
    </div>
  <%end%>
  
  <div class="form-group">
    <%= f.label :technique, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :technique, :class => "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :team, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :team, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
